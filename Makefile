###############################################################################
# Makefile
###############################################################################

DIA = $(wildcard *.dia)
PNG = $(DIA:.dia=.png)
TEX = $(wildcard *.tex)
BBL = $(TEX:.tex=.bbl)
PDF = $(TEX:.tex=.pdf)

###############################################################################

all: $(PNG) $(PDF)

auto: $(PNG)
	latexmk -pdf -pvc

clean:
	-latexmk -C
	-$(RM) $(BBL) *-eps-converted-to.pdf *~

###############################################################################

%.png: %.dia
	dia -e $@ $<

%.pdf: $(DIA) $(PNG) %.bib %.tex
	latexmk -f -pdf $*

###############################################################################

.NOEXPORT:

###############################################################################

