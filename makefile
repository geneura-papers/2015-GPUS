###############################################################################
# makefile
###############################################################################

DIA = $(wildcard *.dia)
PNG = $(DIA:.dia=.png)
TEX = $(wildcard *.tex)
TMP = $(TEX:.tex=.aux) $(TEX:.tex=.bbl) $(TEX:.tex=.blg) $(TEX:.tex=.fdb_latexmk) $(TEX:.tex=.fls) $(TEX:.tex=.log) $(TEX:.tex=.out) $(TEX:.tex=.spl)
PDF = $(TEX:.tex=.pdf)

###############################################################################

all: $(PNG) $(PDF)

auto: $(PNG)
	latexmk -pdfps -pvc

clean:
	-latexmk -C
	-rm -fv $(TMP) *~

###############################################################################

%.png: %.dia
	dia -e $@ $<

%.pdf: $(PNG) %.bib %.tex
	latexmk -pdfps -f $*

###############################################################################

.NOEXPORT:

###############################################################################

